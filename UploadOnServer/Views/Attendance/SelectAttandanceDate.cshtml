
@{
    ViewBag.Title = "Human Resource Management System";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.PageHead = "Add or Update Attendance";
}

<div class="col-md-12">
    
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading">Mark / Update Attendance </div>
                    <div class="panel-body">
                        <span class="text-danger">
                            Please select date on which you want to mark attendance.
                            <br />
                            <span class="error-class">@ViewBag.FoundError</span>
                            <br />
                        </span>
                        @using (Html.BeginForm("MarkAttendanceNewAdmin", "Attendance", FormMethod.Get))
                        {
                           
                           
                            <input type="text" class="form-control datepicker" name="AttDate" readonly="readonly" placeholder="MM/DD/YYYY" />
                            <br />
                            <input type="submit" value="Mark Attendance" class="btn btn-success btn-lg" />
                        }
                    </div>
                </div>
            </div>

        </div>
      
        

</div>

<script type="text/javascript">

    $(document).ready(function () {
       
        $(".datepicker").datepicker({
            dateFormat: 'mm/dd/yy',
            changeYear: true,
            changeMonth: true,
            maxDate: 0,
        });
    });

</script>


@section MainSidebar {

    @Html.Partial("_MenuPartial");


}




